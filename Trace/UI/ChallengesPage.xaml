<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Trace.ChallengesPage"
	Title="Challenges"
	Icon="trophy.png">
	<ListView
		x:Name="ChallengeListView"
		ItemsSource="{Binding Challenges}"
		Header="{Binding Summary}"
		ItemSelected="OnSelection"
		IsPullToRefreshEnabled="true"
		Refreshing="OnRefresh">
		<ListView.HeaderTemplate>
			<DataTemplate>
				<StackLayout
					Spacing="0">
					<Label
						FontAttributes="Bold"
						XAlign="Center"
						Text="{Binding .}" />
					<Label
						Text="Pull up to update."
						XAlign="Center"
						FontSize="Small" />
				</StackLayout>
			</DataTemplate>
		</ListView.HeaderTemplate>
		<ListView.ItemTemplate>
			<DataTemplate>
				<TextCell
					Text="{Binding Description}"
					Detail="{Binding Condition, StringFormat='Bike for {0} km'}">
				</TextCell>
			</DataTemplate>
		</ListView.ItemTemplate>
	</ListView>
	<ContentPage.Content>
	</ContentPage.Content>
</ContentPage>