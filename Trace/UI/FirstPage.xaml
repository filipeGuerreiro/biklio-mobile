<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Trace.FirstPage"
	Title="Login">
	<ContentPage.Padding>
		<OnPlatform
			x:TypeArguments="Thickness"
			iOS="20, 40, 20, 20"
			Android="20, 20, 20, 20"
			WinPhone="20, 20, 20, 20" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout
			VerticalOptions="FillAndExpand"
			HorizontalOptions="FillAndExpand"
			Orientation="Vertical"
			Spacing="15">
			<Image
				Source="logo.png"
				Aspect="AspectFit">
			</Image>
			<Button
				x:Name="registerButton"
				Text="Register New Account"
				Clicked="OnRegister" />
			<Button
				x:Name="loginButton"
				Text="Sign In"
				Clicked="OnLogin" />
			<Button
				x:Name="skipButton"
				Text="Skip"
				Clicked="OnSkip" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>