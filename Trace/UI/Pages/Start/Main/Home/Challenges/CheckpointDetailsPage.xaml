<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	x:Class="Trace.CheckpointDetailsPage"
	Title="Details">
	<ContentPage.Padding>
		<OnPlatform
			x:TypeArguments="Thickness"
			iOS="20, 40, 20, 20"
			Android="20, 20, 20, 20"
			WinPhone="20, 20, 20, 20" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout>
			<Label
				Text="{Binding Name}"
				XAlign="Center" />
			<Label
				Text="{Binding AvailableHours, StringFormat='Open between {0}'}"
				FontSize="Small" />
			<Label
				Text="{Binding Address, StringFormat='Address: {0}'}"
				FontSize="Small" />
			<Label
				Text="{Binding PhoneNumber, StringFormat='Phone number: {0}'}"
				FontSize="Small" />
			<Label
				Text="{Binding WebsiteAddress, StringFormat='Website: {0}'}"
				FontSize="Small" />
			<Label
				Text="{Binding FacebookAddress, StringFormat='Facebook: {0}'}"
				FontSize="Small" />
			<Label
				Text="{Binding TwitterAddress, StringFormat='Twitter: {0}'}"
				FontSize="Small" />
			<Label
				Text="{Binding Description, StringFormat='Description: {0}'}"
				FontSize="Small" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>