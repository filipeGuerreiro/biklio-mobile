<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:language="clr-namespace:Trace.Localization;assembly=Trace"
	xmlns:ffimageloading="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
	xmlns:cv="clr-namespace:Xamarin.Forms;assembly=Xamarin.Forms.CarouselView"
	x:Class="Trace.PrivacyPolicyPage">
	<ContentPage.Content>
		<StackLayout
			BackgroundColor="{StaticResource SecondaryColor}">
			<BoxView
				HeightRequest="40">
			</BoxView>
			<ffimageloading:CachedImage
				Source="privacypolicy__logo_name.png"
				HorizontalOptions="Center"
				VerticalOptions="End"
				HeightRequest="120"
				DownsampleHeight="120"
				DownsampleToViewSize="true"
				Aspect="AspectFit">
			</ffimageloading:CachedImage>
			<Label
				Text="{language:Translate PrivacyPolicy}"
				TextColor="{StaticResource SecondaryTextColor}"
				HorizontalOptions="Center"
				VerticalOptions="Start"
				FontAttributes="Bold"
				FontSize="18" />
			<cv:CarouselView
				x:Name="policyCarouselView"
				Margin="8"
				VerticalOptions="FillAndExpand">
				<cv:CarouselView.ItemTemplate>
					<DataTemplate>
						<StackLayout>
							<Label
								Text="{Binding Text}"
								TextColor="{StaticResource SecondaryTextColor}"
								FontSize="14"
								VerticalOptions="CenterAndExpand" />
							<Label
								Text="{Binding Indicator}"
								TextColor="{StaticResource SecondaryTextColor}"
								HorizontalOptions="Center"
								VerticalOptions="End" />
						</StackLayout>
					</DataTemplate>
				</cv:CarouselView.ItemTemplate>
			</cv:CarouselView>
			<Button
				Text="Ok"
				Clicked="onConfirmation"
				BackgroundColor="{StaticResource PrimaryColor}"
				TextColor="{StaticResource PrimaryTextColor}"
				HorizontalOptions="Center"
				HeightRequest="30"
				WidthRequest="120"
				BorderRadius="0"
				Margin="15"
				VerticalOptions="End" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>