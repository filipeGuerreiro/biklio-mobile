<?xml version="1.0" encoding="UTF-8"?>
<ContentPage
	xmlns="http://xamarin.com/schemas/2014/forms"
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	xmlns:language="clr-namespace:Trace.Localization;assembly=Trace"
	x:Class="Trace.StartPage"
	Title="{language:Translate Login}">
	<ContentPage.Padding>
		<OnPlatform
			x:TypeArguments="Thickness"
			iOS="20, 40, 20, 20"
			Android="20, 20, 20, 20"
			WinPhone="20, 20, 20, 20" />
	</ContentPage.Padding>
	<ContentPage.Content>
		<StackLayout
			VerticalOptions="FillAndExpand"
			HorizontalOptions="FillAndExpand"
			Orientation="Vertical"
			Spacing="15">
			<Image
				Source="logo.png"
				Aspect="AspectFit">
			</Image>
			<Button
				Text="{language:Translate Register}"
				BackgroundColor="#24C121"
				TextColor="White"
				Clicked="OnRegister" />
			<Button
				Text="{language:Translate SignIn}"
				BackgroundColor="#24C121"
				TextColor="White"
				Clicked="OnLogin" />
		</StackLayout>
	</ContentPage.Content>
</ContentPage>